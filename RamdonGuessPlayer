package player;

import java.util.Random;

import java.util.Scanner;
import world.World;
import 测试.List.Coordinate;
import 测试.List.ShipLocation;

/**
 * Random guess player (task A).
 * Please implement this class.
 *
 * @author Youhan Xia, Jeffrey Chan
 */
public class RandomGuessPlayer implements Player{

    @Override
    public void initialisePlayer(World world) {
        // To be implemented.
    } // end of initialisePlayer()

    @Override
    public Answer getAnswer(Guess guess) {
        // To be implemented.
    	World w1= new World();
    	Answer a1 =new Answer();
    	
    	
    	
    	for (ShipLocation shipLoc : w1.shipLocations) {
            for (Coordinate cdn : shipLoc.coordinates) {
          	 if(guess.row==cdn.row)
          	 {
          		 if(guess.column==cdn.column){
          			a1.isHit=true;
          		 }
          		 else{
          			a1.isHit = false
          		 }
          	 }
          	 else{
          		a1.isHit = false;
          	 }
            }
            }
    	
    	
        // dummy return
        return a1;
    } // end of getAnswer()


    @Override
    public Guess makeGuess() {
    	Guess g1 = new Guess();
    	Random rand = new Random();
  	  
  	   g1.row=rand.nextInt(10);
  	 g1.column=rand.nextInt(10);
  	 
  	  

        // To be implemented.

        // dummy return
        return g1;
    } // end of makeGuess()


    @Override
    public void update(Guess guess, Answer answer) {
        // To be implemented.
    } // end of update()


    @Override
    public boolean noRemainingShips() {
        // To be implemented.

        // dummy return
        return true;
    } // end of noRemainingShips()

} // end of class RandomGuessPlayer
